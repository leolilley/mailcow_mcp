{
  "name": "mailcow-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Mailcow email server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/src/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "node tests/integration/server-startup.test.js",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "npm run test:coverage && npm run coverage:open",
    "coverage:open": "node scripts/open-coverage.js",
    "test:coverage:view": "./scripts/view-coverage.sh",
    "test:all": "npm run test:unit && npm run build && npm run test:integration",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "mcp",
    "mailcow",
    "email",
    "protocol",
    "ai",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "bytes": "^3.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.0",
    "pretty-bytes": "^7.0.0",
    "validator": "^13.15.15",
    "xss": "^1.0.15",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
